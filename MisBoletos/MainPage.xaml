<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MisBoletos.MainPage"
             Title="RifasApp">

    <VerticalStackLayout Padding="24" Spacing="20">
        <Label Text="Almacén de la suerte"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Añadir rifa" Clicked="OnAddClicked"/>
        <Button Text="Eliminar rifa" Clicked="OnRemoveClicked"/>
        <Button Text="Comprobar números" Clicked="OnCheckClicked"/>
        <Button Text="Sorteo" Clicked="OnSorteoClicked"/>
    </VerticalStackLayout>
</ContentPage>
