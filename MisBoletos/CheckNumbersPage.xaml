<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MisBoletos.CheckNumbersPage"
             Title="Comprobar boletos">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Encabezado con el estado de la lista -->
        <Label x:Name="lblEstado"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="DarkBlue"/>

        <!-- Lista de nÃºmeros -->
        <CollectionView x:Name="cvNumeros"
                        ItemsSource="{Binding}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="10">
                        <Label Text="{Binding .}" FontSize="18"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>