<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MisBoletos.CheckRifaPage"
             Title="Comprobar Boletos">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto,Auto">

        <Label x:Name="lblEstado"
               Grid.Row="0"
               FontSize="18"
               HorizontalOptions="Center" />

        <!-- CollectionView ocupa todo el espacio disponible -->
        <CollectionView x:Name="cvNumeros"
                        Grid.Row="1"
                        ItemsLayout="VerticalList"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Margin="5" Padding="10">
                        <Label Text="{Binding Numero}" FontSize="18" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>