<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MisBoletos.CheckRifaPage"
             Title="Comprobar rifas">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label x:Name="lblEstado"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="DarkBlue"/>
        <CollectionView x:Name="cvNumeros">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="10">
                        <Label Text="{Binding Numero}" FontSize="18"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>