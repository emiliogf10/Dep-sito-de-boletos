<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MisBoletos.RemoveRifaPage"
             Title="Eliminar Boletos">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto,Auto,Auto">

        <Label x:Name="lblTitulo"
               Grid.Row="0"
               FontSize="18"
               HorizontalOptions="Center" />

        <!-- CollectionView con scroll y selección -->
        <CollectionView x:Name="cvNumeros"
                        Grid.Row="1"
                        SelectionMode="Multiple"
                        ItemsLayout="VerticalList"
                        VerticalOptions="FillAndExpand"
                        Margin="0,5">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Cada Label cambia de color si está seleccionado -->
                    <Label Text="{Binding Numero}"
                           FontSize="18"
                           Padding="15"
                           VerticalOptions="Center"
                           HorizontalOptions="FillAndExpand">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label"
                                         Binding="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=SelectedItem}"
                                         Value="{Binding .}">
                                <Setter Property="BackgroundColor" Value="LightBlue"/>
                                <Setter Property="TextColor" Value="White"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button x:Name="btnDelete"
                Grid.Row="2"
                Text="Eliminar seleccionados"
                Clicked="OnEliminarSeleccionadosClick"
                Margin="0,5" />

        <Button x:Name="btnDeleteAll"
                Grid.Row="3"
                Text="Eliminar todos"
                Clicked="OnEliminarTodosClick"
                Margin="0,5"
                BackgroundColor="Red"
                TextColor="White" />

        <Label x:Name="lblMensaje"
               Grid.Row="4"
               TextColor="Blue"
               HorizontalOptions="Center"/>
    </Grid>
</ContentPage>




