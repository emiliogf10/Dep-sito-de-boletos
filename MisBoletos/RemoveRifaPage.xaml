<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MisBoletos.RemoveRifaPage"
             Title="Eliminar rifas">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label x:Name="lblTitulo"
               Text="Selecciona los nÃºmeros que quieras eliminar"
               FontAttributes="Bold" />

        <CollectionView x:Name="cvNumeros"
                        SelectionMode="Multiple">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="10">
                        <!-- Como ahora cada item es un Boleto, mostramos su Numero -->
                        <Label Text="{Binding Numero}" FontSize="18" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button x:Name="btnDelete" Text="Eliminar seleccionados" Clicked="OnEliminarSeleccionadosClick" />
        <Button x:Name="btnDeleteAll" Text="Eliminar todos" Clicked="OnEliminarTodosClick" BackgroundColor="Tomato" TextColor="White"/>

        <Label x:Name="lblMensaje" TextColor="Blue"/>
    </VerticalStackLayout>
</ContentPage>
